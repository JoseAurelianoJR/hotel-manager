<h1>Listing items</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity in stock</th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.quantity_in_stock %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Delete', item_path(item), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br><%= link_to 'New item', new_item_path %>
<br><%= link_to 'Back', welcome_index_path %>